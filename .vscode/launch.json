    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Debug bootloader (debug)",
            "cwd": "${workspaceRoot}/sd-bootloader-ng/bootmanager",
            "executable": "./exe/debug/bootloader/bootmgr.axf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": ["${workspaceRoot}/common/debug/cc3200-launchxl-swd.cfg"],
            "armToolchainPath": "${workspaceRoot}/arm-sdk/10-2020-q4-major/bin",
            "postLaunchCommands": [
                "file ./exe/debug/bootloader/bootmgr.axf",
                "load",
            ],
            "preLaunchTask": "Bootmanager: make debug clean all",
            "runToMain": true,
        },
